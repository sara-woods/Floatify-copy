
<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0),rgba(0,0,0,0)), url(https://images.unsplash.com/photo-1579052579104-9be1ca94c714?ixlib=rb-1.2.1&amp;ixid=MXwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHw%3D&amp;auto=format&amp;fit=crop&amp;w=1350&amp;q=80);">
  <div class="col-12 col-md-12 col-lg-12" style= "margin: 10px;">
    <div class="container" style="background-color: rgba(45, 224, 209, 0.9);padding: 20px; border-radius: 10px;">
      <h1>My Bookings: </h1>
    </div>
  </div>
  <div class="row">
    <% @bookings.each do |booking| %>
      <div class="col-12 col-md-12 col-lg-12" style= " margin: 10px;">
        <div class="container" style="font-size: 18px; background-color: white; opacity: 0.9; padding: 20px; border-radius: 10px;">
          Booking Number: 000<%= booking.id %> <br>
          From: <%= booking.starting_date.strftime("%e %b %Y") %>
          - Until: <%= booking.ending_date.strftime("%e %b %Y") %> <br>
          Boat Owner: <%= booking.boat.user.name %> <br>
          Booked By: <%= booking.user.name %> <br>
          Confirmed: <%= booking.confirmation %>
          <div style="font-size: 16px; text-align: right">
            <a href="www.instagram.com" style=" color: grey; font-size: 50px">
              <i class="fas fa-edit"></i>
            </a>
            <a href="www.instagram.com" style=" color: grey; font-size: 50px">
              <i class="fas fa-trash-alt"></i>
            </a>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>





